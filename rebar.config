{require_otp_vsn, "17"}.
{erl_opts, [
			{i, "deps/yaws/include"},
			{platform_define, "(linux|solaris|freebsd|darwin)", 'TEST'},
			warnings_as_errors,

            warn_export_all,
            warn_unused_import,
            warn_untyped_record]}.

{xref_checks, [fail_on_warning, undefined_function_calls]}.
{clean_files, [".test/*.beam", ".eunit/*", "ebin/*.beam"]}.
{cover_enabled, true}.

{validate_app_modules, true}.

{sub_dirs, ["rel"]}.


{deps, [
	{yaws, "1.9.*", 
		{git, "https://github.com/klacke/yaws.git", {branch, "master"}}}
	]}.


